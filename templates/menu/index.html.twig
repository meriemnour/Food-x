
{% block title %}Hello MenuController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <table border="1">
            <thead>
            <th>id</th>
            <th>Name</th>
            <th>Price</th>
            <th>Category</th>
            <th>Description</th>
            <th>Suppression</th>
            <th>Modification</th>
            </thead>
            <tbody>
            {% for menu in m %}
                <tr>
                    <td>{{ menu.id }}</td>
                    <td>{{ menu.name }}</td>
                    <td>{{ menu.price }}</td>
                    <td>{{ menu.category }}</td>
                    <td>{{ menu.description }}</td>
                    <td>
                        <a class="btn btn-danger" href="{{ path('Remove_Menu',{'id':menu.id}) }}">Supprimer</a>
                    </td>
                    <td>
                        <a class="btn btn-success" href="{{ path('Update_Menu',{'id':menu.id}) }}">Modifier</a>
                    </td>
                </tr>

            {% endfor %}

            </tbody>

        </table>
    </div>
{% endblock %}